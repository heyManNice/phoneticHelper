    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "msedge",
            "url": "https://www.baidu.com",
            "webRoot": "${workspaceFolder}",
            "runtimeArgs": [
                "--disable-extensions-except=${workspaceFolder}/src",
                "--load-extension=${workspaceFolder}/src"
            ]
        },
        {
            "name": "Launch Edge and Open DevTools",
            "request": "launch",
            "type": "msedge",
            "url": "https://www.baidu.com",
            "webRoot": "${workspaceFolder}",
            "runtimeArgs": [
                "--disable-extensions-except=${workspaceFolder}/src",
                "--load-extension=${workspaceFolder}/src",
                "--auto-open-devtools-for-tabs"
            ]
        }
    ]
}